<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detalleproducto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.dashboard.DashboardFragment">

    <LinearLayout
        android:id="@+id/ContenidoInicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#BBF4AF"
                app:navigationIcon="@drawable/ic_volver_atras"
                app:title="            Agregar Producto"
                app:titleTextColor="#133E6A"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="2dp" />

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"
                android:text="Queso Andino tambo"
                android:textSize="24sp"
                android:background="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/cardview_border2"
                android:layout_marginHorizontal="40dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:gravity="center_vertical|center_horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:id="@+id/imageStar6"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star_14"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:padding="0dp" />
                    <ImageView
                        android:id="@+id/imageStar7"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star_14"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:padding="0dp" />
                    <ImageView
                        android:id="@+id/imageStar8"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star_14"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:padding="0dp" />
                    <ImageView
                        android:id="@+id/imageStar9"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star_14"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:padding="0dp" />
                    <ImageView
                        android:id="@+id/imageStar10"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star_14"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:padding="0dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="S/. 38.90"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#2DCB75"
                        android:gravity="center_vertical|center_horizontal"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="20dp"
                android:gravity="center_vertical|center_horizontal">
                <ImageView
                    android:id="@+id/imageIzquiera"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mover_izquiera"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:padding="0dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/quesito"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:padding="8dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp">
                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/quesito"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:background="@drawable/cardview_border2"
                            android:padding="8dp"
                            android:layout_marginHorizontal="6dp"
                            />
                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/quesito"
                            android:adjustViewBounds="true"
                            android:background="@drawable/cardview_border2"
                            android:scaleType="centerInside"
                            android:padding="8dp"
                            android:layout_marginHorizontal="6dp"
                            />
                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/quesito"
                            android:adjustViewBounds="true"
                            android:background="@drawable/cardview_border2"
                            android:scaleType="centerInside"
                            android:padding="8dp"
                            android:layout_marginHorizontal="6dp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/imageDerecha"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mover_derecha"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:padding="0dp" />




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/cardview_border"
                android:layout_marginHorizontal="40dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:gravity="center_vertical|center_horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cantidad:"
                    android:textColor="#2F8B5F"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical|center_horizontal"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp"
                    android:background="@drawable/cardview_border2"
                    android:gravity="center_vertical|center_horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#2F8B5F"
                        android:gravity="center_vertical|center_horizontal"/>
                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imageAumentar"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/aumentar"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:padding="0dp" />
                        <ImageView
                            android:id="@+id/imageDisminuir"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/disminuir"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:padding="0dp" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="20dp"
                android:paddingHorizontal="40dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/cardview_border2"
                    android:gravity="center_vertical|center_horizontal">
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text=" + "
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="#2F8B5F" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Agregar al carrito"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#2F8B5F" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonComprar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#398058"
                    android:radius="34dp"
                    android:text="Comprar ahora"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Información del producto"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:background="#FFFFFF" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="6dp"
                    android:text="Es momento de innovar todo lo que te rodea, visualiza cualquiera de tus actividades diarias fácilmente sin perder el estilo con el Smart Watch"
                    android:textSize="16sp"
                    android:background="#FFFFFF" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Reseñas"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:background="#FFFFFF" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pablo Jimenez"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:background="#FFFFFF" />
                        <ImageView
                            android:id="@+id/imageStar1"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star_14"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:padding="0dp" />
                        <ImageView
                            android:id="@+id/imageStar2"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star_14"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:padding="0dp" />
                        <ImageView
                            android:id="@+id/imageStar3"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star_14"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:padding="0dp" />
                        <ImageView
                            android:id="@+id/imageStar4"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star_14"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:padding="0dp" />
                        <ImageView
                            android:id="@+id/imageStar5"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star_14"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:padding="0dp" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="Buen producto aunque muy dulce"
                        android:textSize="15sp"
                        android:background="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/botones_inferiores"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#2F8B5F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/cuenta"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.955"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/micuenta"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/favorites"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.745"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/favorito"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/compra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/compra"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bolsa"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/categories"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.255"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categorías"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/inicio_boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/casita"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/casita"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/casita"
            android:layout_width="52dp"
            android:layout_height="47dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_home_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.017"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.304" />

        <ImageView
            android:id="@+id/categorías"
            android:layout_width="52dp"
            android:layout_height="47dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_dashboard_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.269"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.304" />

        <ImageView
            android:id="@+id/bolsa"
            android:layout_width="53dp"
            android:layout_height="47dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_bolsa_compra"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.304" />

        <ImageView
            android:id="@+id/favorito"
            android:layout_width="53dp"
            android:layout_height="46dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_corazon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.741"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.333" />

        <ImageView
            android:id="@+id/micuenta"
            android:layout_width="53dp"
            android:layout_height="46dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_mi_cuenta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.952"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.333" />
    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>